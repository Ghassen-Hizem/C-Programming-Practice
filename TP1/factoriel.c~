#include <stdlib.h>
#include <stdio.h>

int main(){

  int x;
  printf("donner le nombre de x\n");
  scanf("%d",&x);

  printf("le resultat de exp x est :\n");
  printf("%lf",expon(x,20));
  
  
  
  return 0;
}


int facto(int n){
  if(n==1) { return 1;  }

  else {

    return n*facto(n-1);
  }

}


double power(double x, int n) {

  if(n==0) {
    return 1;
  }

  else {
    return x*power(n-1);
  }

}


double expon(double x , int n) {

  int i;
  int s=1;
  if(n==0) {
    return 1;
  }
  else {
  for(i=1;i<=n;i++){
    s = s + (power(x,i)/facto(i)); 
    
  }

  return s;

  }

  

}

